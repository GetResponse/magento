<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Customer\CustomerData\SectionPoolInterface">
        <arguments>
            <argument name="sectionSourceMap" xsi:type="array">
                <item name="getresponse-tracking-code" xsi:type="string">
                    GetResponse\GetResponseIntegration\CustomerData\WebTrackingCode
                </item>
            </argument>
            <argument name="sectionSourceMap" xsi:type="array">
                <item name="getresponse-recommendation" xsi:type="string">
                    GetResponse\GetResponseIntegration\CustomerData\Recommendation
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Block\Product\View">
        <plugin name="getresponse-product-view" type="GetResponse\GetResponseIntegration\CustomerData\ProductView"/>
    </type>
    <type name="Magento\Catalog\Block\Category\View">
        <plugin name="getresponse-category-view" type="GetResponse\GetResponseIntegration\CustomerData\CategoryView"/>
    </type>
</config>
